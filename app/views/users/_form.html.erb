<% placeholder = action_name == 'edit' ? 'Dejar en blanco si no desea cambiar la contraseÃ±a' : '' %>
<%= form_for(@user, html: {role: 'form'}) do |f| %>
  <%= render partial: 'layouts/resource_errors', locals: {resource: @user} %>
  <div class="form-group">
    <%= f.label :username, class: 'control-label' %><br>
    <%= f.text_field :username, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :fullname, class: 'control-label' %><br>
    <%= f.text_field :fullname, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :role_id, class: 'control-label' %><br>
    <%= f.collection_select :role_id, @roles, :first, :second, {include_blank: false}, class: 'selectizable' %>
  </div>
  <div class="form-group">
    <%= f.label :password, class: 'control-label' %><br>
    <%= f.password_field :password, autocomplete: 'off', placeholder: placeholder, class: 'form-control' %>
  </div>
    <div class="form-group">
    <%= f.label :password_confirmation, class: 'control-label' %><br>
    <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= link_to 'Regresar', users_path, class: 'btn btn-default' %>
    <%= f.submit 'Guardar', class: 'btn btn-success' %>
  </div>
<% end %>
