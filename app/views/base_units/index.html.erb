<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Unidades base</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">Unidades base registradas</div>
      <div class="panel-body">
        <%= render partial: 'layouts/notifications' %>
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Unidad</th>
              <th>Descripcion</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @base_units.each do |base_unit| %>
              <tr>
                <td><%= base_unit.unit %></td>
                <td><%= base_unit.description %></td>
                <td>
                  <%= link_to 'Editar', edit_base_unit_path(base_unit), class: 'btn btn-info btn-sm' %>
                  <%= link_to 'Eliminar', base_unit, method: :delete, data: { confirm: 'Â¿Esta seguro?' }, class: 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Nueva unidad base', new_base_unit_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>