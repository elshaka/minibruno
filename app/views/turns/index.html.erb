<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Turnos</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">Turnos registrados</div>
      <div class="panel-body">
        <%= render partial: 'layouts/notifications' %>
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Inicio</th>
              <th>Fin</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @turns.each do |turn| %>
              <tr>
                <td><%= turn.name %></td>
                <td><%= turn.start_time.strftime('%I:%M %p') %></td>
                <td><%= turn.end_time.strftime('%I:%M %p') %></td>
                <td>
                  <%= link_to 'Editar', edit_turn_path(turn), class: 'btn btn-info btn-sm' %>
                  <%= link_to 'Eliminar', turn, method: :delete, data: { confirm: 'Â¿Esta seguro?' }, class: 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Nuevo turno', new_turn_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
