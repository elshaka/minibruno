<div class="panel-heading">
  <h3 class="panel-title">Iniciar sesión</h3>
</div>
<div class="panel-body">
  <%= render partial: 'layouts/notifications' %>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <fieldset>
      <div class="form-group">
        <%= f.text_field :username, :autofocus => true, class: 'form-control', placeholder: 'Nombre de usuario' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Contraseña' %>
      </div>
      <!-- Change this to a button or input when using this as a form -->
      <%= f.submit 'Iniciar sesión', :class => 'btn btn-lg btn-success btn-block' %>
    </fieldset>
  <% end %>
</div>