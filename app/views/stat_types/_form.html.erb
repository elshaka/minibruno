<%= form_for(@stat_type, html: {role: 'form'}) do |f| %>
  <% if @stat_type.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @stat_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :base_unit_id, 'Unidad', class: 'control-label' %><br>
    <%= f.collection_select :base_unit_id, @base_units, :id, :to_collection_select, {include_blank: 'Sin unidad'}, class: 'selectizable' %>
  </div>
  <div class="form-group">
    <%= f.label :description, 'DescripciÃ³n', class: 'control-label' %><br>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= link_to 'Regresar', stat_types_path, class: 'btn btn-default' %>
    <%= f.submit 'Guardar', class: 'btn btn-success' %>
  </div>
<% end %>