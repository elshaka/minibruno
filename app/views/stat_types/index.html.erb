<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Variables</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">Variables registradas</div>
      <div class="panel-body">
        <%= render partial: 'layouts/notifications' %>
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Descripción</th>
              <th>Unidad</th>
              <th>Controlable</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @stat_types.each do |stat_type| %>
              <tr>
                <td><%= stat_type.id %></td>
                <td><%= stat_type.description %></td>
                <td><%= stat_type.base_unit.nil? ? 'Sin unidad' : stat_type.base_unit.to_collection_select %></td>
                <td><%= stat_type.controllable ? 'Sí' : 'No' %></td>
                <td>
                  <%= link_to 'Editar', edit_stat_type_path(stat_type), class: 'btn btn-info btn-sm' %>
                  <%= link_to 'Eliminar', stat_type, method: :delete, data: { confirm: '¿Esta seguro?' }, class: 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Nueva variable', new_stat_type_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>