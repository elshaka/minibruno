<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Motores</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">Motores registrados</div>
      <div class="panel-body">
        <%= render partial: 'layouts/notifications' %>
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Descripcion</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @motors.each do |motor| %>
              <tr>
                <td><%= motor.name %></td>
                <td><%= motor.description %></td>
                <td>
                  <%= link_to 'Editar', edit_motor_path(motor), class: 'btn btn-info btn-sm' %>
                  <%= link_to 'Eliminar', motor, method: :delete, data: { confirm: 'Â¿Esta seguro?' }, class: 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Nuevo motor', new_motor_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
